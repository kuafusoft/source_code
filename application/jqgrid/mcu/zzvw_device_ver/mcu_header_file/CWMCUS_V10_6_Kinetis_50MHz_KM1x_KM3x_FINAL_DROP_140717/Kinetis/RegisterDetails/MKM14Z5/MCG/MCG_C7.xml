<!DOCTYPE register-details-file>
<register-details-file xmlns="http://www.freescale.com/schema/ddd/1.0/detail" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.freescale.com/schema/ddd/1.0/detail RegisterDetails.xsd">

<register-details>
  <name>MCG_C7</name>
  <bitrange>7:0</bitrange>
  <reset-value>0</reset-value>
  <description>MCG Control 7 Register</description>
  <bitfields>
    <bitfield>
      <name>OSCSEL</name>
      <bitrange>0</bitrange>
      <format>binary</format>
      <access>readwrite</access>
      <description>MCG OSC Clock Select</description>
      <values>
        <value>
          <value>0b0</value>
          <description>Selects Oscillator (OSCCLK).</description>
        </value>
        <value>
          <value>0b1</value>
          <description>Selects 32 kHz RTC Oscillator.</description>
        </value>
      </values>
    </bitfield>
    <bitfield>
      <name/>
      <bitrange>5:1</bitrange>
      <format>binary</format>
      <access>read</access>
      <description>Reserved</description>
    </bitfield>
    <bitfield>
      <name>PLL32KREFSEL</name>
      <bitrange>7:6</bitrange>
      <format>binary</format>
      <access>readwrite</access>
      <description>MCG PLL 32Khz Reference Clock Select</description>
      <values>
        <value>
          <value>0b00</value>
          <description>Selects 32 kHz RTC Oscillator.</description>
        </value>
        <value>
          <value>0b01</value>
          <description>Selects 32 kHz IRC.</description>
        </value>
        <value>
          <value>0b10</value>
          <description>Selects FLL FRDIV clock.</description>
        </value>
        <value>
          <value>0b11</value>
          <description>Reserved.</description>
        </value>
      </values>
    </bitfield>
  </bitfields>
</register-details>

</register-details-file>
