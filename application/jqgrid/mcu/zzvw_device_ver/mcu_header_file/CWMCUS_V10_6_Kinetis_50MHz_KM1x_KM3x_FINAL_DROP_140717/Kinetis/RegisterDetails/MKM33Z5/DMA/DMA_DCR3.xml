      <format>binary</format>
      <access>readwrite</access>
      <description>Disable request</description>
      <values>
        <value>
          <value>0b0</value>
          <description>ERQ bit is not affected.</description>
        </value>
        <value>
          <value>0b1</value>
          <description>ERQ bit is cleared when the BCR is exhausted.</description>
        </value>
