<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE register-details-file>
<register-details-file xmlns="http://www.freescale.com/schema/ddd/1.0/detail" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.freescale.com/schema/ddd/1.0/detail RegisterDetails.xsd">

<register-details>
  <name>RTC_ALM_SECONDS</name>
  <bitrange>15:0</bitrange>
  <reset-value>0</reset-value>
  <description>RTC Seconds Alarm Register</description>
  <bitfields>
    <bitfield>
      <name>ALM_SEC</name>
      <bitrange>5:0</bitrange>
      <format>binary</format>
      <access>readwrite</access>
      <description>Seconds Value for Alarm. Same as Seconds Counter Value in SECONDSRTC Seconds Counters Register .</description>
    </bitfield>
    <bitfield>
      <name/>
      <bitrange>7:6</bitrange>
      <format>binary</format>
      <access>read</access>
      <description>Reserved bits</description>
    </bitfield>
    <bitfield>
      <name>DEC_SEC</name>
      <bitrange>8</bitrange>
      <format>binary</format>
      <access>write</access>
      <description>Decrement Seconds Counter by 1.</description>
    </bitfield>
    <bitfield>
      <name>INC_SEC</name>
      <bitrange>9</bitrange>
      <format>binary</format>
      <access>write</access>
      <description>Increment Seconds Counter by 1.</description>
    </bitfield>
    <bitfield>
      <name/>
      <bitrange>15:10</bitrange>
      <format>binary</format>
      <access>read</access>
    </bitfield>
  </bitfields>
</register-details>

</register-details-file>
