<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE register-details-file>
<register-details-file xmlns="http://www.freescale.com/schema/ddd/1.0/detail" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.freescale.com/schema/ddd/1.0/detail RegisterDetails.xsd">

<register-details>
  <name>RTC_FILTER2_CFG</name>
  <bitrange>15:0</bitrange>
  <reset-value>0</reset-value>
  <description>RTC Tamper 2 Filter Configuration Register</description>
  <bitfields>
    <bitfield>
      <name/>
      <bitrange>7:0</bitrange>
      <format>binary</format>
      <access>read</access>
    </bitfield>
    <bitfield>
      <name>FIL_DUR2</name>
      <bitrange>11:8</bitrange>
      <format>binary</format>
      <access>readwrite</access>
      <description>Tamper Detect Bit 2 Filter Duration</description>
      <values>
        <value>
          <value>0b0</value>
          <description>Filtering operation disabled.</description>
        </value>
      </values>
    </bitfield>
    <bitfield>
      <name>CLK_SEL2</name>
      <bitrange>14:12</bitrange>
      <format>binary</format>
      <access>readwrite</access>
      <description>Tamper Filter 2 Clock Select</description>
      <values>
        <value>
          <value>0b000</value>
          <description>32 kHz clock</description>
        </value>
        <value>
          <value>0b001</value>
          <description>512 Hz clock</description>
        </value>
        <value>
          <value>0b010</value>
          <description>128 Hz clock</description>
        </value>
        <value>
          <value>0b011</value>
          <description>64 Hz clock</description>
        </value>
        <value>
          <value>0b100</value>
          <description>16 Hz clock</description>
        </value>
        <value>
          <value>0b101</value>
          <description>8 Hz clock</description>
        </value>
        <value>
          <value>0b110</value>
          <description>4 Hz clock</description>
        </value>
        <value>
          <value>0b111</value>
          <description>2 Hz clock</description>
        </value>
      </values>
    </bitfield>
    <bitfield>
      <name>POL2</name>
      <bitrange>15</bitrange>
      <format>binary</format>
      <access>readwrite</access>
      <description>Tamper Detect Input Bit 2 Polarity Control</description>
      <values>
        <value>
          <value>0b0</value>
          <description>Tamper detect input bit 2 is active high.</description>
        </value>
        <value>
          <value>0b1</value>
          <description>Tamper detect input bit 2 is active low.</description>
        </value>
      </values>
    </bitfield>
  </bitfields>
</register-details>

</register-details-file>
