<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE register-details-file>
<register-details-file xmlns="http://www.freescale.com/schema/ddd/1.0/detail" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.freescale.com/schema/ddd/1.0/detail RegisterDetails.xsd">

<register-details>
  <name>RCM_SRS0</name>
  <bitrange>7:0</bitrange>
  <reset-value>0x82</reset-value>
  <description>System Reset Status Register 0</description>
  <bitfields>
    <bitfield>
      <name>WAKEUP</name>
      <bitrange>0</bitrange>
      <format>binary</format>
      <access>read</access>
      <description>Low Leakage Wakeup Reset</description>
      <values>
        <value>
          <value>0b0</value>
          <description>Reset not caused by wakeup source</description>
        </value>
        <value>
          <value>0b1</value>
          <description>Reset caused by wakeup source</description>
        </value>
      </values>
    </bitfield>
    <bitfield>
      <name>LVD</name>
      <bitrange>1</bitrange>
      <format>binary</format>
      <access>read</access>
      <description>Low-Voltage Detect Reset</description>
      <values>
        <value>
          <value>0b0</value>
          <description>Reset not caused by LVD trip or POR</description>
        </value>
        <value>
          <value>0b1</value>
          <description>Reset caused by LVD trip or POR</description>
        </value>
      </values>
    </bitfield>
    <bitfield>
      <name>LOC</name>
      <bitrange>2</bitrange>
      <format>binary</format>
      <access>read</access>
      <description>Loss-of-Clock Reset</description>
      <values>
        <value>
          <value>0b0</value>
          <description>Reset not caused by a loss of external clock.</description>
        </value>
        <value>
          <value>0b1</value>
          <description>Reset caused by a loss of external clock.</description>
        </value>
      </values>
    </bitfield>
    <bitfield>
      <name>LOL</name>
      <bitrange>3</bitrange>
      <format>binary</format>
      <access>read</access>
      <description>Loss-of-Lock Reset</description>
      <values>
        <value>
          <value>0b0</value>
          <description>Reset not caused by a loss of lock in the PLL</description>
        </value>
        <value>
          <value>0b1</value>
          <description>Reset caused by a loss of lock in the PLL</description>
        </value>
      </values>
    </bitfield>
    <bitfield>
      <name/>
      <bitrange>4</bitrange>
      <format>binary</format>
      <access>read</access>
    </bitfield>
    <bitfield>
      <name>WDOG</name>
      <bitrange>5</bitrange>
      <format>binary</format>
      <access>read</access>
      <description>Watchdog</description>
      <values>
        <value>
          <value>0b0</value>
          <description>Reset not caused by watchdog timeout</description>
        </value>
        <value>
          <value>0b1</value>
          <description>Reset caused by watchdog timeout</description>
        </value>
      </values>
    </bitfield>
    <bitfield>
      <name>PIN</name>
      <bitrange>6</bitrange>
      <format>binary</format>
      <access>read</access>
      <description>External Reset Pin</description>
      <values>
        <value>
          <value>0b0</value>
          <description>Reset not caused by external reset pin</description>
        </value>
        <value>
          <value>0b1</value>
          <description>Reset caused by external reset pin</description>
        </value>
      </values>
    </bitfield>
    <bitfield>
      <name>POR</name>
      <bitrange>7</bitrange>
      <format>binary</format>
      <access>read</access>
      <description>Power-On Reset</description>
      <values>
        <value>
          <value>0b0</value>
          <description>Reset not caused by POR</description>
        </value>
        <value>
          <value>0b1</value>
          <description>Reset caused by POR</description>
        </value>
      </values>
    </bitfield>
  </bitfields>
</register-details>

</register-details-file>
