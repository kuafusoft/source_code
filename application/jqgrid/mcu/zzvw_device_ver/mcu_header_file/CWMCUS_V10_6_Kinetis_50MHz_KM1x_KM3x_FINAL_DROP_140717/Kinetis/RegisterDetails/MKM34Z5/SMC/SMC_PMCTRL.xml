<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE register-details-file>
<register-details-file xmlns="http://www.freescale.com/schema/ddd/1.0/detail" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.freescale.com/schema/ddd/1.0/detail RegisterDetails.xsd">

<register-details>
  <name>SMC_PMCTRL</name>
  <bitrange>7:0</bitrange>
  <reset-value>0x40</reset-value>
  <description>Power Mode Control register</description>
  <bitfields>
    <bitfield>
      <name>STOPM</name>
      <bitrange>2:0</bitrange>
      <format>binary</format>
      <access>readwrite</access>
      <description>Stop Mode Control</description>
      <values>
        <value>
          <value>0b000</value>
          <description>Normal Stop (STOP)</description>
        </value>
        <value>
          <value>0b001</value>
          <description>Reserved</description>
        </value>
        <value>
          <value>0b010</value>
          <description>Very-Low-Power Stop (VLPS)</description>
        </value>
        <value>
          <value>0b011</value>
          <description>Reserved</description>
        </value>
        <value>
          <value>0b100</value>
          <description>Very-Low-Leakage Stop (VLLSx)</description>
        </value>
        <value>
          <value>0b101</value>
          <description>Reserved</description>
        </value>
        <value>
          <value>0b110</value>
          <description>Reseved</description>
        </value>
        <value>
          <value>0b111</value>
          <description>Reserved</description>
        </value>
      </values>
    </bitfield>
    <bitfield>
      <name>STOPA</name>
      <bitrange>3</bitrange>
      <format>binary</format>
      <access>read</access>
      <description>Stop Aborted</description>
      <values>
        <value>
          <value>0b0</value>
          <description>The previous stop mode entry was successsful.</description>
        </value>
        <value>
          <value>0b1</value>
          <description>The previous stop mode entry was aborted.</description>
        </value>
      </values>
    </bitfield>
    <bitfield>
      <name/>
      <bitrange>4</bitrange>
      <format>binary</format>
      <access>read</access>
    </bitfield>
    <bitfield>
      <name>RUNM</name>
      <bitrange>6:5</bitrange>
      <format>binary</format>
      <access>readwrite</access>
      <description>Run Mode Control</description>
      <values>
        <value>
          <value>0b00</value>
          <description>Normal Run mode (RUN)</description>
        </value>
        <value>
          <value>0b01</value>
          <description>Reserved</description>
        </value>
        <value>
          <value>0b10</value>
          <description>Very-Low-Power Run mode (VLPR)</description>
        </value>
        <value>
          <value>0b11</value>
          <description>Reserved</description>
        </value>
      </values>
    </bitfield>
    <bitfield>
      <name/>
      <bitrange>7</bitrange>
      <format>binary</format>
      <access>read</access>
      <description>This bit is reserved for future expansion and should always be written zero for deterministic operation.</description>
    </bitfield>
  </bitfields>
</register-details>

</register-details-file>
