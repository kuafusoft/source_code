<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE register-details-file>
<register-details-file xmlns="http://www.freescale.com/schema/ddd/1.0/detail" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.freescale.com/schema/ddd/1.0/detail RegisterDetails.xsd">

<register-details>
  <name>RTC_DAYS</name>
  <bitrange>15:0</bitrange>
  <reset-value>0x1</reset-value>
  <description>RTC Days and Day-of-Week Counters Register</description>
  <bitfields>
    <bitfield>
      <name>DAY_CNT</name>
      <bitrange>4:0</bitrange>
      <format>binary</format>
      <access>readwrite</access>
      <description>Days Counter Value.</description>
    </bitfield>
    <bitfield>
      <name/>
      <bitrange>7:5</bitrange>
      <format>binary</format>
      <access>read</access>
      <description>Reserved bits .</description>
    </bitfield>
    <bitfield>
      <name>DOW</name>
      <bitrange>10:8</bitrange>
      <format>binary</format>
      <access>readwrite</access>
      <description>Day of Week Counter Value.</description>
      <values>
        <value>
          <value>0b0</value>
          <description>Sunday</description>
        </value>
        <value>
          <value>0b1</value>
          <description>Monday</description>
        </value>
      </values>
    </bitfield>
    <bitfield>
      <name/>
      <bitrange>15:11</bitrange>
      <format>binary</format>
      <access>read</access>
    </bitfield>
  </bitfields>
</register-details>

</register-details-file>
